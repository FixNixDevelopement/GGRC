.container-fluid
  .row-fluid
    .span4
    .span4
      %section#LoginBox.widget
        %section.header
          %h2
            Signup to Google GRC
        %section.content
          .flash!=[:error, :warning, :notice].map { |type| content_tag(:div, flash[type], :class => "message #{type}") if flash[type] }.join
  
          =form_for :signup, :url => signup_path(@signup) do |f|
            .row-fluid
              .span12
                =f.label 'Email'
                =f.text_field :email
            .row-fluid
              .span12
                =f.label 'Password'
                =f.password_field :password
            .row-fluid
              .span12
                =f.label 'Repeat Password'
                =f.password_field :password_confirmation
              .span6
                .pull-right
                  %button.btn.btn-success.pull-right{:type => "submit"} Signup
    .span4